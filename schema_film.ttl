PREFIX owl:   <http://www.w3.org/2002/07/owl#>
PREFIX rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs:  <http://www.w3.org/2000/01/rdf-schema#>
PREFIX sh:    <http://www.w3.org/ns/shacl#>
PREFIX :      <http://projet.fr/films_schema#>
PREFIX skos:  <http://www.w3.org/2004/02/skos/core#>
PREFIX perso: <http://projet.fr/perso_schema#>
PREFIX xsd:   <http://www.w3.org/2001/XMLSchema#>


:CreativeWork
    a owl:Class .

:title
    a           owl:Property ;
    rdfs:domain :CreativeWork ;
    rdfs:range  xsd:string .

:year
    a           owl:Property ;
    rdfs:domain :CreativeWork ;
    rdfs:range  xsd:date .

:genre
    a           owl:Property ;
    rdfs:domain :CreativeWork ;
    rdfs:range  skos:Concept .

:rating
    a           owl:Property ;
    rdfs:domain :CreativeWork ;
    rdfs:range  xsd:integer .

:vote
    a           owl:Property ;
    rdfs:domain :CreativeWork ;
    rdfs:range  xsd:integer .

:gross
    a           owl:Property ;
    rdfs:domain :CreativeWork ;
    rdfs:range  xsd:integer .

:director
    a           owl:Property ;
    rdfs:domain :CreativeWork ;
    rdfs:range  :Person .

:stars
    a           owl:Property ;
    rdfs:domain :CreativeWork ;
    rdfs:range  :Person .

:entity
    a           owl:Property ;
    rdfs:domain :CreativeWork ;
    rdfs:range  skos:Concept .


:CharacterShape
    a                    sh:NodeShape ;
    sh:targetClass       :Character ;    # Applies to all persons
    sh:property          [ sh:path     :actor ;           # constrains the values of ex:ssn
                           sh:minCount 1 ;
                           sh:maxCount 1 ;
                           sh:datatype :Actor ; ] ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) .

:MovieShape
    a                    sh:NodeShape ;
    sh:targetClass       :Movie ;    # Applies to all persons
    sh:property          [ sh:path     :character ;           # constrains the values of ex:ssn
                           sh:minCount 1 ;
                           sh:datatype :Character ; ] ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) .
    