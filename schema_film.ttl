@prefix :      <http://projet.fr/films_schema/> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh:    <http://www.w3.org/ns/shacl#> .
@prefix skos:  <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix perso: <http://projet.fr/perso_schema/> .

:CreativeWorkShape
    a                                                                                                sh:NodeShape ;
    sh:ignoredProperties                                                                             ( rdf:type ) ;
    sh:property                                                                                      [ sh:path     :director ;
                                                                                                       sh:minCount 1 ],
                                                                                                     [ sh:path       :gross ;
                                                                                                       :minInclusive 0 ],
                                                                                                     [ sh:path       :vote ;
                                                                                                       sh:minInclusive 0 ],
                                                                                                     [ sh:path         :rating ;
                                                                                                       sh:minInclusive 0 ;
                                                                                                       sh:maxInclusive 10 ],
                                                                                                     [ sh:path     :entity ;
                                                                                                       sh:maxCount 1 ;
                                                                                                       sh:in       ( :MARVEL
                                                                                                                     :DC ) ] ;
    sh:targetClass                                                                                   :CreativeWork .

:NodeShape
    a           sh:NodeShape ;
    sh:property [ sh:path rdf:type ; # this is a class
                  sh:not  [ sh:and ( [ sh:pattern 'http://projet.fr/films_schema/' ] [ sh:property [ sh:path     rdf:type ;
                                                                                                     sh:maxCount 0 ] ] ) ] ] .


:castmember
    a           owl:ObjectProperty ;
    rdfs:label  "film cast-member" ;
    rdfs:domain :CreativeWork ;
    rdfs:range  :Person .

:characters
    a             owl:ObjectProperty ;
    rdfs:label    "film characters" ;
    rdfs:domain   :CreativeWork ;
    rdfs:range    perso:Character ;
    owl:inverseOf :presentinwork .

:charactersTransitive
    a                      owl:ObjectProperty ;
    rdfs:label             "film characters" ;
    rdfs:domain            :CreativeWork ;
    rdfs:range             perso:Character ;
    owl:propertyChainAxiom ( :characters rdfs:seeAlso ) .

:conflict
    a           owl:ObjectProperty ;
    rdfs:label  "film characters" ;
    rdfs:domain :Character .

:director
    a           owl:IrreflexiveProperty ;
    rdfs:label  "film director" ;
    rdfs:domain :CreativeWork ;
    rdfs:range  :Person .

:entity
    a           owl:ObjectProperty ;
    rdfs:label  "film entity" ;
    rdfs:domain :CreativeWork ;
    rdfs:range  skos:Concept .

:genre
    a           owl:ObjectProperty ;
    rdfs:label  "film genre" ;
    rdfs:domain :CreativeWork ;
    rdfs:range  skos:Concept .

:gross
    a           owl:ObjectProperty ;
    rdfs:label  "film gross" ;
    rdfs:domain :CreativeWork ;
    rdfs:range  xsd:integer .

:name
    a           owl:FunctionalProperty ;
    rdfs:label  "his/her name" ;
    rdfs:domain :CreativeWork ;
    rdfs:range  xsd:string .

:performer
    a           owl:ObjectProperty ;
    rdfs:label  "perform by" ;
    rdfs:domain :Character ;
    rdfs:range  :Person .

:presentinwork
    a             owl:ObjectProperty ;
    rdfs:label    "character present in the film" ;
    rdfs:domain   :Character ;
    rdfs:range    :CreativeWork ;
    owl:inverseOf :characters .

:publicationdate
    a           owl:ObjectProperty ;
    rdfs:label  "film release date" ;
    rdfs:domain :CreativeWork ;
    rdfs:range  xsd:date .

:rating
    a           owl:ObjectProperty ;
    rdfs:label  "film rating" ;
    rdfs:domain :CreativeWork ;
    rdfs:range  xsd:integer .

:stars
    a           owl:ObjectProperty ;
    rdfs:label  "film stars" ;
    rdfs:domain :CreativeWork ;
    rdfs:range  :Person .

:title
    a           owl:ObjectProperty ;
    rdfs:label  "title" ;
    rdfs:domain :CreativeWork ;
    rdfs:range  xsd:string .

:vote
    a           owl:ObjectProperty ;
    rdfs:domain :CreativeWork ;
    rdfs:range  xsd:integer .

:year
    a           owl:ObjectProperty ;
    rdfs:domain :CreativeWork ;
    rdfs:range  xsd:date .

:CreativeWork
    a owl:Class .

:genreConcept
    a              skos:Concept ;
    skos:prefLabel "film genre" .

:producerConcept
    a              skos:Concept ;
    skos:prefLabel "super-hero film producer" .



