PREFIX owl:  <http://www.w3.org/2002/07/owl#>
PREFIX rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX sh:   <http://www.w3.org/ns/shacl#>
PREFIX :     <http://projet.fr/films#>
PREFIX skos: <http://www.w3.org/2004/02/skos/core#> .


:CreativeWork a owl:Class.

:Movie a skos:Concept ;
    skos:prefLabel "movie" .

:ShortMovie a skos:Concept.

:TVShow a skos:Concept.

:VideoGame a skos:Concept.

:AttractionsPark a skos:concept.


:CharacterShape
    a                    sh:NodeShape ;
    sh:targetClass       :Character ;    # Applies to all persons
    sh:property          [ sh:path     :actor ;           # constrains the values of ex:ssn
                           sh:minCount 1 ;
                           sh:maxCount 1 ;
                           sh:datatype :Actor ; ] ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) .

:MovieShape
    a                    sh:NodeShape ;
    sh:targetClass       :Movie ;    # Applies to all persons
    sh:property          [ sh:path     :character ;           # constrains the values of ex:ssn
                           sh:minCount 1 ;
                           sh:datatype :Character ; ] ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) .
    