PREFIX owl:  <http://www.w3.org/2002/07/owl#>
PREFIX rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX sh:   <http://www.w3.org/ns/shacl#>
PREFIX film: <http://projet.fr/films_schema/>
PREFIX :     <http://projet.fr/perso_schema/>
PREFIX xsd:  <http://www.w3.org/2001/XMLSchema#>
PREFIX skos:  <http://www.w3.org/2004/02/skos/core#>

:PersonShape
    a                    sh:NodeShape ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property          [ sh:path     :name ;
                           sh:maxCount 1 ] ;
    sh:targetClass       :Person .

:Comic a owl:Class;
    rdfs:subClassOf film:CreativeWork;
    rdfs:label "Comic".

:Person
    a          owl:Class;
    owl:disjointUnionOf (:Male :Female) ;
    rdfs:label "person" .

:Race a owl:Class;
    rdfs:label "race".

:race a owl:ObjectProperty;
    rdfs:label "race";
    rdfs:domain :Person;
    rdfs:range :Race.

:Fictional
    a          owl:Class ;
    rdfs:label "fictionnal" .

:Real
    a          owl:Class ;
    rdfs:label "real" .

:Actor
    a                  owl:Class ;
    rdfs:label         "an actor" ;
    owl:intersectionOf ( :Person :Real ) .

:Appearance
    a owl:Class;
    rdfs:label "Physic appearance".

:appearance a owl:ObjectProperty;
    rdfs:label "Appearance";
    rdfs:domain :Person;
    rdfs:range :Appearance.

:Director
    a                  owl:Class ;
    rdfs:label         "a director" ;
    owl:intersectionOf ( :Person :Real ) .

:Character
    a                  owl:Class ;
    owl:disjointUnionOf (:Villain :Hero :Neutral);
    rdfs:label         "a character" ;
    owl:intersectionOf ( :Person :Fictional ) .

:hasImage
    a          owl:ObjectProperty ;
    rdfs:label "has image" .

:name
    a           owl:DatatypeProperty ;
    rdfs:label  "name" ;
    rdfs:domain :Person ;
    rdfs:range  xsd:string .

:id
    a          owl:DatatypeProperty ;
    rdfs:label "id" .

:secretIdentity a owl:ObjectProperty;
    owl:inverseOf :heroIdentity;
    rdfs:label "Secret identity";
    rdfs:range :Character.

:heroName
    a            owl:DatatypeProperty ;
    rdfs:label   "Full-name" ;
    rdfs:comment "Hero/Villain name" .

:alias
    a          owl:DatatypeProperty ;
    rdfs:label "Alias" .

:alter
    a          owl:DatatypeProperty ;
    rdfs:label "Alter-egos" .

:placeOfBirth
    a          owl:DatatypeProperty ;
    rdfs:label "Place of birth" .

:heroIdentity a owl:ObjectProperty;
    owl:inverseOf :secretIdentity;
    rdfs:label "Hero/Villain identity";
    rdfs:range :Character.

:Male
    a          owl:Class ;
    rdfs:label "Male" .

:Female
    a          owl:Class ;
    rdfs:label "Female" .

:Color a owl:Class;
    rdfs:label "color".

:eyes
    a          owl:ObjectProperty ;
    rdfs:label "Color eyes";
    rdfs:range :Color.

:hair
    a          owl:ObjectProperty ;
    rdfs:label "Color hair";
    rdfs:range :Color.

:apparition
    a          owl:ObjectProperty ;
    rdfs:label "apparition of the character";
    rdfs:range :Comic;
    rdfs:domain :Character.

:Villain
    a          owl:Class ;
    rdfs:label "Villain" .

:Neutral a owl:Class;
    rdfs:label "Neutral".

:Hero
    a          owl:Class ;
    rdfs:label "Hero" .

:heightF
    a          owl:DatatypeProperty ;
    rdfs:label "height in feet" .

:heightCm
    a          owl:DatatypeProperty ;
    rdfs:label "height in cm" .

:weightKg
    a          owl:DatatypeProperty ;
    rdfs:label "weight in kg " .

:weightLb
    a          owl:DatatypeProperty ;
    rdfs:label "weight in lb " .

:base
    a          owl:DatatypeProperty ;
    rdfs:label "Base" .

:affiliation
    a          owl:DatatypeProperty ;
    rdfs:label "group-affiliation" .

:relatives
    a          owl:ObjectProperty ;
    rdfs:label "relatives" ;
    rdfs:range :Person.

:intelligence
    a          owl:DatatypeProperty ;
    rdfs:label "intelligence" .

:strength
    a          owl:DatatypeProperty ;
    rdfs:label "strength" .

:speed
    a          owl:DatatypeProperty ;
    rdfs:label "speed" .

:durability
    a          owl:DatatypeProperty ;
    rdfs:label "durability" .

:power
    a          owl:DatatypeProperty ;
    rdfs:label "power" .

:combat
    a          owl:DatatypeProperty ;
    rdfs:label "combat" .

:publisher
    a          owl:ObjectProperty ;
    rdfs:label "publisher";
    rdfs:range skos:Concept.

:occupation a owl:ObjectProperty;
    rdfs:label "Occupations";
    rdfs:range :Occupation.

:Occupation a owl:Class;
    rdfs:label "an occupation".
